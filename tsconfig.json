{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.js", // Every js file inside src folder
    "src/**/*.ts", // Every ts file inside src folder
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist" // Exclude compiled output by Typescript compiler
  ]
}